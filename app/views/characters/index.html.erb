<% provide(:title, 'Character Index')%>

<h1>Character Index</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
