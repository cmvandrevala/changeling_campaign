<% provide(:title, 'Character Index')%>

<div class="container">

	<h1>Character Index</h1>

	<table class="table table-hover table-bordered table-condensed">

	  <thead>
	    <tr>
	      <th>Name</th>
		  <th>Species</th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @characters.each do |character| %>
	      <tr>
	        <td><%= character.name %></td>
			<td><%= character.species %></td>
	      </tr>
	    <% end %>
	  </tbody>

	</table>

</div>
