<h1><%= @character.name %></h1>

<table border="1px" style="width:100%">
  <thead>
    <tr>
      <th>Date</th>
	  <th>Title</th>
	  <th>Description</th>
	  <th>Characters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @character.events.order(:date).each do |event| %>
      <tr>
        <td><%= event.date %></td>
		<td><%= event.title %></td>
		<td><%= event.description %></td>
		<td><%= link_to "Show", event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>