<% provide(:title, 'Event Index')%>

<h1>Event Index</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
	    <th>Date</th>
        <th>Name</th>
	    <th>Description</th>
	    <th>Location</th>
	    <th>Characters</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.location.name %></td>
        <td>
          <% event.characters.each do |character| %>
            <%= character.name %><br />
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
