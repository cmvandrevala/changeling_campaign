<% provide(:title, 'Location Index')%>

<h1>Location Index</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
