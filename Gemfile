source 'https://rubygems.org'
ruby '2.1.3'

gem 'rails'
gem 'pg'
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'sprockets-rails'
gem 'autoprefixer-rails'

group :development do
  gem 'spring'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
  gem 'factory_girl_rails'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'guard-rails'
  gem 'childprocess'
end

group :production do
  gem 'rails_12factor', '~> 0.0.2'
end

group :doc do
  gem 'sdoc', '~> 0.4.0'
end
